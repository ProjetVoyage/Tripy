{% extends 'base.html.twig' %}

{% block title %}Liste des Documents{% endblock %}

{% block body %}
<div class="container p-3">
    <h1>Liste des {{ folder.name }} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Intitulé</th>
                <th>Fichier</th>
            </tr>
        </thead>
        <tbody>
            {% for document in documents %}
            <tr>
                <td>{{ document.name }}</td>
                <td><a href="{{ asset('uploads/document/' ~ document.url) }}" target="_blank">{{ document.url }}</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Pas de {{ folder.name }} enregistrés</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('document_new') }}" class="btn btn-primary">Enregistrer {{ folder.name }}</a>
</div>
{% endblock %}