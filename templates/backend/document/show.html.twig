{% extends 'base.html.twig' %} {% block title %}Document{% endblock %} {% block body %}

<h1>Document</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ document.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>Fichier</th>
            <td>{{ document.url }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('document_index', {'id': document.id}) }}">back to list</a>

<a href="{{ path('document_edit', {'id': document.id}) }}">edit</a> {{ include('backend/document/_delete_form.html.twig') }} {% if extension == 'pdf' %}
<div class="container">
    <div class="row">
        <embed src="{{ asset(documentSrc) }}" width=800 height=500 type='application/pdf' />
    </div>
</div>
{% elseif extension == 'jpeg' %}
<div class="container">
    <div class="row">
        <embed src="{{ asset(documentSrc) }}" width=800 height=500 type='image/jpeg' />
    </div>
</div>

{% else %}
<div class="container">
    <div class="row">
        <object data="{{ asset(documentSrc) }}" type="text/html" width=800 height=500 type="text/html" />
    </div>
</div>
{% endif %} {% endblock %}