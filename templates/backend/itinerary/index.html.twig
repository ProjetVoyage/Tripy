{% extends 'base.html.twig' %}

{% block title %}Itinerary index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 mb-2 d-flex align-items-center justify-content-between">
            <h1 class="float-left">Mes itinéraires</h1>   <a href="{{ path('itinerary_new', {'id': travel.id}) }}" class="btn btn-primary">Nouvel itinéraire</a>
        </div>
        <div class="col-12">
    <table class="table">
        <thead>
            <tr>
                <!-- <th>Id</th> -->
                <th> Date de départ </th>
                <th> Date de retour </th>
                <th> Pays </th>
                <th> Ville </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
        {% for itinerary in itineraries %}
            <tr>
                <!-- <td>{{ itinerary.id }}</td> -->
                <td>{{ itinerary.departureDate ? itinerary.departureDate|date('d/m/Y') : '' }}</td>
                <td>{{ itinerary.arrivalDate ? itinerary.arrivalDate|date('d/m/Y') : '' }}</td>
                <td>{{ itinerary.countryName ? itinerary.countryName : '' }}</td>
                <td>{{ itinerary.cityName ? itinerary.cityName : '' }}</td>
                <td>
                    <div class="d-flex">
                    <a href="{{ path('itinerary_show', {'id': itinerary.id}) }}" class="btn btn-primary mr-2"><i class="fas fa-eye"></i></a>
                    {{ include('backend/itinerary/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
{% endblock %}
