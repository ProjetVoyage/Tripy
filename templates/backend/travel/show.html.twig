{% extends 'base.html.twig' %} {% block title %}{{ travel.name }}{% endblock %} {% block body %}
<div class="container p-3">
    <div class="row">

        <div class="col-12 mb-2 d-flex align-items-center justify-content-between">
            <h1>Voyage : {{ travel.name }}</h1> <span class="d-flex"><a
                    href="{{ path('travels_edit', {'id': travel.id}) }}" class="btn btn-primary mr-1"><i
                        class="fas fa-pen"></i></a>{{ include('backend/travel/_delete_form.html.twig') }}</span>
        </div>

        <div class="container">

        </div>
        <div class="col-12" style="display: flex;flex-direction: column;">
            <div style="display: flex;">
                <p> Voyageurs : {% for traveler in travelers %}
                    <p>
                        {{ traveler.username }}
                    </p> {% if not loop.last %} , {% endif %} {% endfor %}
                </p>
            </div>
            <a href="{{ path('traveler_list', {'id': travel.id}) }}" style="margin-bottom: 1rem!important; width: 200px;"
                class="btn btn-primary">Ajouter des
                voyageurs</a>

        </div>

        <div class="col-12">
            <p>Total des dépenses du voyage : <b>{{ total }} €</b></p>
            <a href="{{ path('expense_index', {'id': travel.id}) }}" class="btn btn-primary">Dépenses</a>
        </div>

        <div class="col-12 mt-3">
            <p>Nombre d'itinéraires pour ce voyage : <b>{{ itinerariesNumber }}</b></p>
            <a href="{{ path('itinerary_index', {'id': travel.id}) }}" class="btn btn-primary">Itinéraires</a>
        </div>

        <div class="col-12 mt-3">
            <p>Nombre de documents pour ce voyage : <b>{{ documentsNumber }}</b></p>
            <a href="{{ path('folder_index', {'id': travel.id}) }}" class="btn btn-primary">Documents</a>
        </div>

        <div class="col-12 mt-3">
        </div>
    </div>
</div>
{% endblock %}