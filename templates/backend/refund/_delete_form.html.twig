<form method="post" action="{{ path('refund_delete', {'id': refund.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce remboursement ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ refund.id) }}">
    <button class="btn">Supprimer</button>
</form>
