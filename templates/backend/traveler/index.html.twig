{% extends 'base.html.twig' %}

{% block title %}Traveler index{% endblock %}

{% block body %}
    <h1>Traveler index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Roles</th>
                <th>Email</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for traveler in travelers %}
            <tr>
                <td>{{ traveler.id }}</td>
                <td>{{ traveler.roles ? traveler.roles|json_encode : '' }}</td>
                <td>{{ traveler.email }}</td>
                <td>{{ traveler.password }}</td>

                <td>
                    <a href="{{ path('traveler_show', {'id': traveler.id}) }}">show</a>
                    <a href="{{ path('traveler_edit', {'id': traveler.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('traveler_new') }}">Create new</a>
{% endblock %}
